<h2 class="center">User table</h2>
<button><a href="users/new">Create New User</a></button>
<table class = "table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>ZipCode</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>

            <tr>
                <td>
                    <a href ="<%= `/users/${user._id}` %>">
                        <%= user.fullName %>
                    </a>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.zipCode %>
                </td>
                <td>
                    <a href ="<%= `users/${user._id}/edit` %>">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%= `users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm(`Are you sure?`)">
                        Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>